{
  "description": "Cognitive offloading hooks for spatial-memory-mcp",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/find_python.sh\" \"${CLAUDE_PLUGIN_ROOT}/hooks/session_start.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/find_python.sh\" \"${CLAUDE_PLUGIN_ROOT}/hooks/post_tool_use.py\"",
            "timeout": 10,
            "async": true
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/find_python.sh\" \"${CLAUDE_PLUGIN_ROOT}/hooks/pre_compact.py\"",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/find_python.sh\" \"${CLAUDE_PLUGIN_ROOT}/hooks/stop.py\"",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
