{
  "description": "Cognitive offloading hooks for spatial-memory-mcp. NOTE: SessionStart is excluded from plugin hooks due to Claude Code bug on Windows (v2.1.37) where plugin SessionStart hooks freeze terminal input. Use setup-hooks CLI to install SessionStart via .claude/settings.json instead.",
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/hooks/post_tool_use.py\"",
            "timeout": 10,
            "async": true
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/hooks/pre_compact.py\"",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/hooks/stop.py\"",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
